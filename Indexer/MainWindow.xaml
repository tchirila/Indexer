<Window x:Class="Indexer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Indexer.ViewModels"
        Title="IndexerWindow" Height="768" Width="1366">

    <Window.DataContext>
        <vm:ViewModel></vm:ViewModel>
    </Window.DataContext>

    <Grid Margin="-2,0,2,0" Background="LightGray">
        <StackPanel Orientation="Horizontal">
            <Button x:Name="Btn_Execute" Content="{ Binding ButtonExecuteLabel }" Command="{Binding Btn_Execute_ClickCommand}" Margin="10" Width="50" Height="20" HorizontalAlignment="Left"></Button>
            <Label x:Name="Content_Excute" Content="{ Binding ContentExecute }" Margin="10" Height="25"></Label>
        </StackPanel>
    </Grid>
</Window>
